<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_partner_form_inh_saletype" model="ir.ui.view">
            <field name="name">view.partner.form.inh.saletype</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='sales_purchases']//field[@name='customer']" position="after">
                    <field name="sale_type" attrs="{'invisible':[('customer', '=', False)]}"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
