<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="load_sales_on_budget_sale_form_view">
            <field name="name">load.sales.on.budget.sale.form</field>
            <field name="model">load.sales.on.budget</field>
            <field name="arch" type="xml">
                <form string="Load Sales">
                    <group colspan="4" col="4">
                        <field name="partner_id" select="1" colspan="4"
                        domain="[('customer','=',True)]"
                        context="{'search_default_customer':1, 'show_address': 1}"
                        required="1" readonly="1"/>
                        <field name="sale_id" readonly="1"/>
                        <field name="budget_id" required="1"/>
                        <field name="date_from" select="1" required="1"
                        readonly="1"/>
                        <field name="date_to" select="1" required="1"
                        readonly="1"/>
                        <field name="product_categ_id" select="1"/>
                        <field name="product_tmpl_id" select="1"/>
                        <field name="product_id" select="1" colspan="4"/>
                    </group>
                    <footer>
                        <button name="load_sales" type="object" 
                        string="Load" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link"
                        special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="load_sales_on_budget_budget_form_view">
            <field name="name">load.sales.on.budget.budget.form</field>
            <field name="model">load.sales.on.budget</field>
            <field name="arch" type="xml">
                <form string="Load Sales">
                    <group colspan="4" col="4">
                        <field name="partner_id" select="1" colspan="4"
                        domain="[('customer','=',True)]"
                        context="{'search_default_customer':1, 'show_address': 1}"
                        required="1"/>
                        <field name="sale_id"/>
                        <field name="budget_id" required="1" readonly="1"/>
                        <field name="date_from" select="1" required="1"/>
                        <field name="date_to" select="1" required="1"/>
                        <field name="product_categ_id" select="1"/>
                        <field name="product_tmpl_id" select="1"/>
                        <field name="product_id" select="1" colspan="4"/>
                    </group>
                    <footer>
                        <button name="load_sales" type="object" 
                        string="Load" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link"
                        special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>
