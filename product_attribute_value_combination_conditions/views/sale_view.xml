<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="sale_order_line_extended_form">
            <field name="name">sale.order.line.extended.form</field>
            <field name="model">sale.order.line</field>
            <field name="arch" type="xml">
                <form string="Sales Order Lines">
                    <header groups="base.group_user">
                        <button name="300" states="confirmed" string="Invoice"
                                type="action" icon="terp-document-new"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,confirmed,done"
                               statusbar_colors="{&quot;exception&quot;:&quot;red&quot;,&quot;cancel&quot;:&quot;red&quot;}"/>
                    </header>
                    <group>
                        <group>
                            <field name="product_template"/>
                            <field name="product_attributes_count"
                                   invisible="1"/>
                            <div colspan="4"
                                 attrs="{'invisible': [('product_attributes_count', '=', 0)]}">
                                <label for="product_attributes"/>
                                <field name="product_attributes">
                                    <tree create="false" delete="false"
                                          editable="1">
                                        <field name="attribute"/>
                                        <field name="possible_values"
                                               invisible="1"
                                               widget="many2many_tags"/>
                                        <field name="value"/>
                                        <button name="add_predecessor_attributes"
                                                string="Select"
                                                type="object"
                                                icon="STOCK_COPY"

                                                />
                                        <field name="price_extra"
                                               readonly="True"/>
                                    </tree>
                                </field>
                                <button name="add_predecessor_attributes"
                                        states="draft" string="(check)"
                                        type="object"
                                        class="oe_edit_only oe_link"
                                        colspan="2"
                                        />
                            </div>
                            <field name="order_id" invisible="1"/>
                            <field name="product_id"
                                   context="{'partner_id':order_id.partner_id, 'quantity':product_uom_qty, 'pricelist':order_id.pricelist_id, 'uom':product_uom}"
                                   groups="base.group_user"
                                   on_change="product_id_change(order_id, product_id, product_uom_qty, False, product_uos_qty, False, name, order_id, False, True, order_id, False, order_id, False, context)"/>
                            <label for="product_uom_qty"/>
                            <div>
                                <field context="{'partner_id':order_id.partner_id, 'quantity':product_uom_qty, 'pricelist':order_id.pricelist_id, 'uom':product_uom}"
                                       name="product_uom_qty" class="oe_inline"
                                       on_change="product_id_change(order_id,product_id,product_uom_qty,product_uom,product_uos_qty,product_uos,name,order_id, False, False, order_id, False, order_id, True, context)"/>
                                <field name="product_uom"
                                       groups="product.group_uom"
                                       class="oe_inline oe_no_button"
                                       on_change="product_uom_change(order_id,product_id,product_uom_qty,product_uom,product_uos_qty,product_uos,name,order_id, False, False, order_id, context)"/>
                            </div>
                            <label for="product_uos_qty"
                                   groups="product.group_uos"/>
                            <div groups="product.group_uos">
                                <field name="product_uos_qty"
                                       class="oe_inline"/>
                                <field name="product_uos"
                                       options="{&quot;no_open&quot;: True}"
                                       class="oe_inline"/>
                            </div>
                            <field name="price_unit"/>
                            <label for="discount"
                                   groups="sale.group_discount_per_so_line"/>
                            <div name="discount"
                                 groups="sale.group_discount_per_so_line">
                                <field name="discount" class="oe_inline"/>
                                %
                            </div>
                        </group>
                        <group>
                            <field name="tax_id" widget="many2many_tags"
                                   domain="[('type_tax_use','&lt;&gt;','purchase')]"/>
                            <field name="th_weight"/>
                            <!-- we should put a config wizard for these two fields -->
                            <field name="address_allotment_id"/>
                        </group>
                    </group>
                    <label for="name"/>
                    <field name="name"/>
                    <div groups="base.group_no_one">
                        <label for="invoice_lines"/>
                        <field name="invoice_lines"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="sale_order_extended_form_view">
            <field name="name">sale.order.extended.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="priority" eval="20" />
            <field name="arch" type="xml">
                <h1 position="after">
                    <button class="oe_stat_button" name="action_open_lines"
                        icon="fa-archive" type="object"
                        string="Sale lines">
                    </button>
                </h1>

                <xpath expr="//field[@name='order_line']/tree" position="attributes">
                    <attribute name="editable"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']"
                       position="before">
                    <field name="product_template" />
                </xpath>
                <xpath expr="//field[@name='order_line']/tree//field[@name='price_subtotal']"
                       position="after">
                    <field name="order_state" invisible="1"/>
                    <button name="action_duplicate"
                            state="draft"
                            string="Duplicate"
                            type="object"
                            icon="STOCK_COPY"
                            attrs="{'invisible': [('order_state', 'not in', ['draft', 'sent'])]}"
                            help="Duplicate line" />
                </xpath>
                <xpath expr="//field[@name='order_line']/form//field[@name='product_id']"
                       position="before">
                    <field name="product_template" />
                    <field name="product_attributes_count" invisible="1"/>
                    <div colspan="4"
                         attrs="{'invisible': [('product_attributes_count', '=', 0)]}">
                        <label for="product_attributes" />
                        <field name="product_attributes">
                            <tree create="false" delete="false" editable="1">
                                <field name="attribute" />
                                <field name="possible_values"
                                       invisible="1"
                                       widget="many2many_tags" />
                                <field name="value" />
                                <button name="add_predecessor_attributes"
                                    string="Select"
                                    type="object"
                                    icon="STOCK_COPY"

                                    />
                                <field name="price_extra" readonly="True" />
                            </tree>
                        </field>
                        <button name="add_predecessor_attributes"
                            states="draft" string="(check)" type="object"
                            class="oe_edit_only oe_link" colspan="2"
                            />
                    </div>
                </xpath>
                <xpath expr="//field[@name='order_line']//form//field[@name='price_unit']"
                       position="after">
                    <button name="update_price_unit"
                            states="draft" string="(update)" type="object"
                            class="oe_edit_only oe_link" colspan="2"
                            attrs="{'invisible':[('product_id','!=',False)]}"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="sale_order_line_extended_form_view">
            <field name="name">sale.order.line.extended.form</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_order_line_form2" />
            <field name="arch" type="xml">
                <field name="product_id" position="before">
                    <field name="product_template" />
                </field>
                <field name="name" position="after">
                    <label for="product_attributes" />
                    <field name="product_attributes"
                        attrs="{'invisible': [('product_attributes','=',[])]}"
                        options="{'no_create': True, 'no_delete': True}">
                        <tree create="0" delete="0" editable="1">
                            <field name="attribute" />
                            <field name="value"/>
                            <button name="add_predecessor_attributes"
                                    string="Select"
                                    type="object"
                                    icon="STOCK_COPY"
                                    attrs="{'readonly': [('value', '=', False)]}"
                                    />
                            <field name="price_extra" readonly="True"/>
                        </tree>
                    </field>
                    <button name="update_price_unit"
                            states="draft" string="(check)" type="object"
                            class="oe_edit_only oe_link" colspan="2"
                            attrs="{'invisible':[('product_id','!=',False)]}"/>

                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="sale_order_line_extended_tree_view">
            <field name="name">sale.order.line.extended.tree</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_order_line_tree" />
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="product_template" />
                    <field name="product_id" />
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="sale_order_line_extended_search_view">
            <field name="name">sale.order.line.extended.search</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_sales_order_line_filter" />
            <field name="arch" type="xml">
                <field name="product_id" position="after">
                    <field name="product_template" />
                </field>
                <filter string="Product" position="after">
                    <filter string="Template"
                            icon="terp-accessories-archiver"
                            domain="[]"
                            context="{'group_by':'product_template'}" />
                </filter>
            </field>
        </record>

        <record id="view_order_line_attributes_tree" model="ir.ui.view">
            <field name="name">sale.order.line.tree</field>
            <field name="model">sale.order.line</field>
            <field name="arch" type="xml">
                <tree string="Sales Order Lines">
                    <field name="product_id" invisible="1"/>
                    <field name="order_id"/>
                    <field name="order_partner_id"/>
                    <field name="name"/>
                    <field name="product_uom_qty" string="Qty"/>
                    <field name="product_uom" string="Unit of Measure" groups="product.group_uom"/>
                    <field name="salesman_id"/>
                    <field name="price_subtotal" sum="Total"/>
                    <field name="state"/>
                    <field name="invoiced"/>
                </tree>
            </field>
        </record>

        <record id="act_sale_order_line" model="ir.actions.act_window">
            <field name="name">Sale order lines</field>
            <field name="res_model">sale.order.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id"
                   ref="product_attribute_value_combination_conditions.view_order_line_attributes_tree"></field>
            <field
                    name="product_attribute_value_combination_conditions.sale_order_line_extended_form"></field>
        </record>
    </data>
</openerp>
