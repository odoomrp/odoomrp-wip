<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="sale_order_extended_form_view">
            <field name="name">sale.order.extended.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id"
                ref="sale_product_variants.sale_order_extended_form_view" />
            <field name="arch" type="xml">
                <xpath
                    expr="//field[@name='order_line']/form//field[@name='product_attributes']/tree//field[@name='value']"
                    position="after">
                    <field name="attr_type" invisible="1" />
                    <field name="custom_value"
                        attrs="{'readonly':[('attr_type','!=','range')]}" />
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="sale_order_line_extended_form_view">
            <field name="name">sale.order.line.extended.form</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id"
                ref="sale_product_variants.sale_order_line_extended_form_view" />
            <field name="arch" type="xml">
                <xpath
                    expr="//field[@name='product_attributes']/tree//field[@name='value']"
                    position="after">
                    <field name="attr_type" invisible="1" />
                    <field name="custom_value"
                        attrs="{'readonly':[('attr_type','!=','range')]}" />
                </xpath>
            </field>
        </record>

    </data>
</openerp>
