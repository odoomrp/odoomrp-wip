<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="product_supplierinfo_edit_view">
            <field name="name">product.supplierinfo.edit.view</field>
            <field name="model">product.supplierinfo</field>
            <field eval="50" name="priority"/>
            <field name="inherit_id" ref="product.product_supplierinfo_form_view" />
            <field name="arch" type="xml">
                <field name="pricelist_ids" position="after">
                    <footer invisible="not context.get('view_buttons')">
                        <button class="oe_highlight" name="button_save_data" string="Save" type="object" />
                        or
                        <button class="oe_link" special="cancel" string="Cancel" />
                    </footer>
                </field>

            </field>
        </record>
    </data>
</openerp>
