<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="product_template_mrp_production_warning_form_view" model="ir.ui.view">
            <field name="name">product.template.mrp_production_warning.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="warning.product_warning_form_view" />
            <field name="arch" type="xml">
                <page string="Warnings" position="inside">
                    <group string="Warning when Manufacturing this Product">
                        <field name="mrp_production_warn" />
                        <field name="mrp_production_warn_msg"
                                attrs="{'required':[('mrp_production_warn','!=','no-message')],'readonly':[('mrp_production_warn','=','no-message')]}"/>
                    </group>
                </page>
            </field>
        </record>

    </data>
</openerp>
