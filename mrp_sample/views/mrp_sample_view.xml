<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="mrp_production_packaging_form">
            <field name="name">MRP packaging form</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp_packaging.mrp_production_packaging_form" />
            <field name="arch" type="xml">
                <group string="Expected Production" position="after">
                    <group string="Sample" colspan="4" col="4">
                        <field name="sample" nolabel="1" colspan="4"
                            col="4" />
                    </group>
                    <field name="sample_taken" />
                     <group colspan="4" col="4">
                        <field name="claim" colspan="2" col="2" />
                        <field name="packaging_user" colspan="2"
                            col="2" />
                    </group>
                </group>
            </field>
        </record>
    </data>
</openerp>