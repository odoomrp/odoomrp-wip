<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="quant_expiry_tree_view">
            <field name="name">quant.expiry.tree.view</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lot_id']" position="after">
                    <field name="expiry_state"/>
                </xpath>
                <xpath expr="//tree" position="attributes">
                    <attribute name="colors">orange:expiry_state
                        in 'best_before'; blue:expiry_state in
                        'alert'; gold:expiry_state in
                        'to_remove'; green:expiry_state in
                        'normal'; red:expiry_state in 'expired'
                    </attribute>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
