<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_mrp_config">
            <field name="name">mrp.settings.form</field>
            <field name="model">mrp.config.settings</field>
            <field name="inherit_id" ref="mrp.view_mrp_config" />
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <separator string="Repair Order"/>
                    <group>
                        <label for="id" string="Repair Order"/>
                        <div>
                            <div>
                                <field name="group_mrp_repair_cost_check" class="oe_inline"/>
                                <label for="group_mrp_repair_cost_check"/>
                            </div>
                        </div>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
